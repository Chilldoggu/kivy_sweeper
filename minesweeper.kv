#:import Factory kivy.factory.Factory

<MenuButton@MDRectangleFlatIconButton>:
    size_hint: None, None
    font_size: 30
    padding: [20, 12, 20, 12]
    line_width: 1.5

<InnerGameplaySquareButton>:
    background_normal: 'button_normal.png'
    background_down: 'button_down.png'
    border: [.5,.5,.5,.5]


<GameplaySquareButton>:
    name: 'button'
    squareBtnObj: squareBtn
    InnerGameplaySquareButton:
        id: squareBtn


<GameplaySquareImage>:
    name: 'image'
    Image:


<GameplaySquare>:
    btnWidgetObj: btnWidget
    imgWidgetObj: imgWidget
    GameplaySquareButton:
        id: btnWidget
    GameplaySquareImage:
        id: imgWidget

<WinPopup@Popup>
    auto_dismiss: False
    title_align: 'center'
    title: 'WIN SCREEN'
    size_hint: .25, .25
    overlay_color: 0, 0, 0, 0
    BoxLayout:
        orientation: 'vertical'
        padding: 20, 0, 20, 0
        spacing: 20
        Label:
            text: 'Winner'
        Button:
            size_hint: .7, .3
            text: 'Exit'
            pos_hint: {'center_x': .5}
            on_press: root.dismiss()

<LosePopup@Popup>
    auto_dismiss: False
    title_align: 'center'
    title: 'LOSE SCREEN'
    size_hint: .25, .25
    overlay_color: 0, 0, 0, 0
    BoxLayout:
        orientation: 'vertical'
        padding: 20, 0, 20, 0
        spacing: 20
        Label:
            text: 'Loser'
            # canvas.after:
            #     Color:
            #         rgba: 1, 0, 0, .5
            #     Rectangle:
            #         size: self.size
            #         pos: self.pos
        Button:
            size_hint: .7, .3
            text: 'Exit'
            pos_hint: {'center_x': .5}
            on_press: root.dismiss()
            # canvas.after:
            #     Color:
            #         rgba: 0, 1, 0, .5
            #     Rectangle:
            #         size: self.size
            #         pos: self.pos

<CharLabel@Label>
    color: 0, 0, 0, 1
    font_size: 50
    text: '0'
    canvas.before:
        Color:
            rgba: .3, .3, .3, 1
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height

<Game>:
    name: 'MainGame'
    gameplayGridObj: gameplayGrid
    mineCountdownObj: mineCountdown
    timeCountdownObj: timeCountdown
    mainBoxLayoutObj: mainBoxLayout
    on_total_flags: self.set_mine_countdown(self.mineSweeperObj.mine_amount - self.total_flags)

    BoxLayout:
        id: mainBoxLayout
        orientation:'horizontal'
        padding: 20
        spacing: 30
        # TOOD: Spraw by dało się przesunąć GridLayout. Może Scatter?
        Scatter:
            id: gridScatter
            size_hint: None, None
            do_scale: False
            do_rotation: False
            size: gameplayGrid.size
            canvas.after:
                Color:
                    rgba: 1, 0, 0, .5
                Rectangle:
                    size: self.size
                    pos: self.pos
            GridLayout:
                id: gameplayGrid
                size_hint: None, None
                spacing: 0, 0
                padding: [0, 0, 0, 0]
                col_force_default: True
                row_force_default: True
                canvas.after:
                    Color:
                        rgba: 0, 1, 0, .5
                    Rectangle:
                        size: self.size
                        pos: self.pos

        BoxLayout:
            orientation: 'vertical'
            pos_hint: {'right': 1}
            size_hint: .5, 1
            spacing: 20
            BoxLayout:
                id: mineCountdown
                size_hint: 1, .2
                # size_hint: None, None
                # size: 300, 100 
                orientation: 'horizontal'
                Label:
                    size_hint: 1.2, 1
                    color: 0, 0, 0, 1
                    text: 'Mines left:'
                CharLabel
                CharLabel
                CharLabel
            BoxLayout:
                id: timeCountdown
                size_hint: 1, .2
                # size_hint: None, None
                # size: 300, 100 
                orientation: 'horizontal'
                Label:
                    size_hint: 1.2, 1
                    color: 0, 0, 0, 1
                    text: 'Time:'
                CharLabel
                CharLabel
                CharLabel
            Button:
                text: 'DEBUGGIN TIME'
                on_press: print(gameplayGrid.size)

<Menu>:
    name: 'MainMenu'
    FloatLayout:
        Image:
            source: 'MineSweeperLogo.png'
            y: root.height * 0.3

        MenuButton:
            id: playButton
            text: 'Play Game!'
            icon: 'mine'
            center_x: root.center_x
            on_center_x: 
                self.center_x = root.center_x
            y: root.height * 0.4
            on_press: root.manager.current = 'MainGame'

        MenuButton:
            id: exitButton
            text: 'Exit'
            icon: 'exit-run'
            center_x: root.center_x
            on_center_x: 
                self.center_x = root.center_x
            y: root.height * 0.2 
            on_press: exit()


<MineSweeperScreenManager>:
    Game:
    Menu:
